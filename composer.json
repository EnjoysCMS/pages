{
    "name": "enjoyscms/pages",
    "description": "Module Pages for EnjoysCMS",
    "license": "MIT",
    "type": "enjoyscms-module",
    "require": {
        "php": "^8.1",
        "enjoyscms/core": "^6.0@dev",
        "enjoyscms/admin": "^6.0@dev"
    },
    "autoload": {
        "psr-4": {
            "EnjoysCMS\\Module\\Pages\\": "src/",
            "EnjoysCMS\\Module\\Pages\\Composer\\Scripts\\": "scripts/"
        }
    },
    "extra": {
        "module-name": "Страницы",
        "admin-links": {
            "@pages_admin_list": "Обзор (Список)",
            "@pages_admin_add": "Добавить страницу"
        }
    },
    "scripts": {
        "pages-assets-install": "EnjoysCMS\\Module\\Pages\\Composer\\Scripts\\AssetsInstallCommand",
        "post-install-cmd": "@pages-assets-install",
        "post-update-cmd": "@pages-assets-install"
    },
    "require-dev": {
        "vimeo/psalm": "^4.20 | ^5.0",
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^5.2",
        "codeception/codeception": "4.1.29",
        "codeception/module-phpbrowser": "^1.0.0",
        "codeception/module-asserts": "^1.0.0",
        "codeception/module-rest": "^1.3",
        "codeception/module-webdriver": "^2.0",
        "codeception/module-db": "^2.0",
        "fakerphp/faker": "^1.18",
        "vlucas/phpdotenv": "^5.4"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "oomphinc/composer-installers-extender": true
        }
    }
}
